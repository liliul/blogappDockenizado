<h1>{{categoria.nome}}</h1>
{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body ">
            <h2>{{titulo}}</h2>
            <p>Descrição: {{descricao}}</p>
            <a href="/postagem/{{slug}}"><button class="btn btn-success">Leia mais</button></a>
            <hr>
            <small>Data: {{date}}</small>
        </div>
    </div>
{{else}}
    <h5>Nenhuma Postagem</h5>
{{/each}}            