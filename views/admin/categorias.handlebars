<h2>Lista de Categorias: </h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova Categorias</button></a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>slug: {{slug}}</small>
            <br>
            <small>data: {{date}}</small>
            <br>
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success mt-3">Editar categoria</button></a>

            <form action="/admin/categorias/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar categoria</button>
            </form>
        </div>
    </div>
{{else}}
    <h3 class="mt-3">Nenhuma categoria registrada</h3>
{{/each}}